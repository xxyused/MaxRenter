<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_center_head_portrait_background"
            android:paddingBottom="14dp"
            android:paddingTop="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/imgHead"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/oval_white"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_no_head_img" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="未登录"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/txvPhoneNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <View style="@style/AppTheme.Item.SplitLine" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.maxcloud.renter.customview.ImageTextView
                    android:id="@+id/btnChgPassword"
                    style="@style/AppTheme.IconItem"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/ic_mdf_password"
                    android:text="@string/my_change_password" />

                <ImageView style="@style/AppTheme.Item.GoImage" />
            </FrameLayout>

            <View style="@style/AppTheme.Item.SplitLine" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.maxcloud.renter.customview.ImageTextView
                    android:id="@+id/btnMyChild"
                    style="@style/AppTheme.IconItem"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/ic_my_child"
                    android:text="@string/my_my_child" />

                <ImageView style="@style/AppTheme.Item.GoImage" />
            </FrameLayout>

            <View style="@style/AppTheme.Item.SplitLine" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <View style="@style/AppTheme.Item.SplitLine" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.maxcloud.renter.customview.ImageTextView
                    android:id="@+id/btnSetting"
                    style="@style/AppTheme.IconItem"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/ic_setting"
                    android:text="@string/my_setting" />

                <View
                    android:id="@+id/tipDotSetting"
                    style="@style/AppTheme.Tip.RedDot"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="90dp"
                    android:visibility="gone" />

                <ImageView style="@style/AppTheme.Item.GoImage" />
            </FrameLayout>

            <View style="@style/AppTheme.Item.SplitLine" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>